{
  "name": "@devgateway/wp-react-lib",
  "version": "0.1.2",
  "author": "Sebastian Dimunzio <sdimunzio@developmentgateway.org/>",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.25.7",
    "@babel/plugin-external-helpers": "^7.25.9",
    "@babel/preset-env": "^7.25.9",
    "@babel/preset-react": "^7.25.7",
    "watch": "^1.0.2"
  },
  "peerDependencies": {
    "immutable": "^4.3.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-intl": "^6.8.0",
    "react-redux": "^9.1.2",
    "semantic-ui-react": "^2.1.5 || ^3.0.0-beta.2"
  },
  "scripts": {
    "dist": "rm -rf dist && mkdir dist &&  babel src/ -d dist --copy-files && npm pack",
    "dev": "rm -rf dist && mkdir dist &&  babel src/ -d dist --copy-files --source-maps --watch",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch": "watch ' babel src/ -d dist ' ./src"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devgateway/dg-wp-react.git"
  },
  "keywords": [
    "react"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  }
}
