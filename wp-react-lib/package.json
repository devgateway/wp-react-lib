{
  "name": "@devgateway/wp-react-lib",
  "version": "0.1.2",
  "author": "Sebastian Dimunzio <sdimunzio@developmentgateway.org/>",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "dependencies": {
    "react-scripts": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/preset-react": "^7.13.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "semantic-ui-react": "^2.1.5",
    "immutable": "^4.3.7"
  },

  "peerDependencies": {
    "react": ">=18.0.0 <19",
    "react-dom": ">=18.0.0 <19",
    "react-redux": "*",
    "semantic-ui-react": "^2.0.0",
    "immutable": "^4.0.0"
  },
  "scripts": {
    "dist": "rm -rf dist && mkdir dist &&  babel src/ -d dist --copy-files && npm link",
    "dev": "rm -rf dist && mkdir dist &&  babel src/ -d dist --copy-files --source-maps --watch",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch": "watch ' babel src/ -d dist ' ./src"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devgateway/dg-wp-react.git"
  },
  "keywords": [
    "react"
  ]
}
